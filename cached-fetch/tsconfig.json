{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "module": "ES6",
    "declaration": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"]
}
